        "prepare": "husky install"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "eslint": "^8.56.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.0",
        "prettier": "^3.1.1",
        "ts-jest": "^29.1.1",
        "tsc-files": "^1.1.4",
        "typescript": "^5.3.3"
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {
            "\\.(ts|tsx)?$": "ts-jest"
        }
    },
    "dependencies": {
        "@types/jest": "^29.5.11"
    }
}
